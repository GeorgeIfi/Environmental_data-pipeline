# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Data Pipeline Paths
RAW_DATA_PATH=data/raw/sample_data.csv
BRONZE_DIR=data/bronze
SILVER_DIR=data/silver
GOLD_DIR=data/gold

# File Names (optional overrides)
BRONZE_FILE=raw_data.parquet
SILVER_FILE=silver_data.parquet
GOLD_FILE=gold_data.parquet

# Azure Configuration (for cloud mode)
AZURE_STORAGE_ACCOUNT_NAME=your_storage_account
AZURE_STORAGE_ACCOUNT_KEY=your_storage_key
AZURE_SYNAPSE_WORKSPACE=your_synapse_workspace
AZURE_SYNAPSE_SQL_ENDPOINT=your_synapse_endpoint

# Service Principal Authentication
AZURE_CLIENT_ID=your_service_principal_app_id
AZURE_CLIENT_SECRET=your_service_principal_password
AZURE_TENANT_ID=your_tenant_id

# Azure Data Factory (for orchestration)
AZURE_DATA_FACTORY_NAME=your_adf_name
AZURE_RESOURCE_GROUP=your_resource_group
AZURE_SUBSCRIPTION_ID=your_subscription_id

# Mode Configuration
CLOUD_MODE=false
UPLOAD_TO_AZURE=false